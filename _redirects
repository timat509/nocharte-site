/* ===== Mobile-first header & layout tweaks ===== */
/* Mobile first hard overrides */
@media (max-width: 820px){
  /* Hide link row by default on phones */
  .nav .links{ display: none !important; }

  /* Show when menu is opened */
  .nav.open .links{ display: flex !important; }

  /* Make sure the hamburger is visible on phones */
  .nav-toggle{ display: inline-flex !important; }
}

/* Desktop keeps classic layout */
@media (min-width: 821px){
  .nav-toggle{ display: none !important; }
  .links{ display: flex !important; }
}
@media (max-width: 820px){
  /* Sticky translucent header on mobile */
  .nav{
    position: sticky; top: 0; z-index: 50;
    height: 56px; padding: 0 16px;
    display: flex; align-items: center;
    background: rgba(0,0,0,.6);
    -webkit-backdrop-filter: blur(6px);
    backdrop-filter: blur(6px);
  }

  .nav .logo img{ height: 28px; width: auto; }

  /* Hamburger */
  .nav-toggle{
    display: inline-flex;
    margin-left: auto;
    width: 40px; height: 40px;
    border: 0; background: transparent; padding: 0;
    align-items: center; justify-content: center;
    flex-direction: column; gap: 6px; cursor: pointer;
  }
  .nav-toggle span{
    width: 22px; height: 2px; background: #fff; border-radius: 2px;
    transition: transform .2s ease, opacity .2s ease;
  }

  /* Menu panel (hidden by default) */
  .links{
    position: fixed; inset: 56px 0 0 0;
    display: none; flex-direction: column;
    background: rgba(0,0,0,.96);
    padding: 16px; gap: 6px;
  }
  .links a{
    padding: 12px 8px;
    font-size: 18px; font-weight: 700;
  }

  /* When menu is open */
  .nav.open .links{ display: flex; }
  .nav.open .nav-toggle[aria-expanded="true"] span:nth-child(1){
    transform: translateY(8px) rotate(45deg);
  }
  .nav.open .nav-toggle[aria-expanded="true"] span:nth-child(2){
    opacity: 0;
  }
  .nav.open .nav-toggle[aria-expanded="true"] span:nth-child(3){
    transform: translateY(-8px) rotate(-45deg);
  }

  /* Prevent background scroll when menu open */
  body.menu-open{ overflow: hidden; }

  /* Ensure hero isnâ€™t under the sticky header */
  .hero{ padding-top: 56px; }
}

/* ===== Desktop keeps the classic layout ===== */
@media (min-width: 821px){
  .nav{ position: absolute; top: 0; left: 0; right: 0; padding: 24px 32px; background: transparent; }
  .nav-toggle{ display: none; }
  .links{ display: flex !important; position: static; background: none; padding: 0; gap: 28px; }
}